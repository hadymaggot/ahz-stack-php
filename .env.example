# AHZ-Stack-PHP: PHP Development Environment with FrankenPHP, MySQL, Redis, and Admin Tools
# Version: 1.0.0
# Developer: ahadizapto (9hs@tuta.io)
# License: MIT

# General Application Settings
APP_NAME=AHZ-Stack-PHP
APP_DOMAIN=localhost
TZ=Asia/Jakarta

# PHP Framework Settings
# Available options: none, laravel, symfony, codeigniter
PHP_FRAMEWORK=none

# MySQL Settings
# IMPORTANT: Use strong, unique passwords in production.
MYSQL_DATABASE=lemp_db
MYSQL_USER=lemp_user
MYSQL_PASSWORD=userpassword
MYSQL_ROOT_PASSWORD=rootpassword

# Redis Settings
# IMPORTANT: Use a strong, unique password in production.
REDIS_ENABLE=true
REDIS_PASSWORD=redispassword

# PHP-FPM Upload and Execution Settings
UPLOAD_LIMIT=256M
POST_MAX_SIZE=256M
UPLOAD_MAX_FILESIZE=256M
MAX_EXECUTION_TIME=600
MAX_INPUT_TIME=600

# Redis Commander Credentials
# WARNING: Redis Commander should be removed or secured in a production environment.
# If you must use it, change these default credentials.
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin
